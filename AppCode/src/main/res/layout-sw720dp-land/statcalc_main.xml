<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:background="#FFFFFFFF"
	    android:orientation="horizontal">
	    <LinearLayout
			android:orientation="vertical" 
			android:layout_width="500dp" 
			android:layout_height="fill_parent"
			android:layout_margin="30dp"
			android:gravity="center">
			<ImageView
				android:layout_height="145dp"
				android:layout_width="398dp"
				android:gravity="center"
				android:src="@drawable/sc_rect"/>
		</LinearLayout>
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:layout_marginTop="30dp"
	android:gravity="center">
		<Button 
	    	android:id="@+id/btnPS"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:text="@string/statcalc_btn1"/>
		<Button 
	    	android:id="@+id/btnUCC"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:text="@string/statcalc_btn2"/>
		<Button 
	    	android:id="@+id/btnCCS"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:text="@string/statcalc_btn3"/>
		<Button 
	    	android:id="@+id/btn2x2"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:text="@string/statcalc_btn4"/>
