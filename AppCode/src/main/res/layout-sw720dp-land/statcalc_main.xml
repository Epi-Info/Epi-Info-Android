	    	android:id="@+id/btnPoisson"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:text="@string/statcalc_btn7"/>
		<Button 
	    	android:id="@+id/btnBinomial"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:text="@string/statcalc_btn8"/>
		<Button 
	    	android:id="@+id/btnOpenEpi"
	    	android:layout_width="418dp"
	    	android:layout_height="50dp"
	    	android:layout_margin="10dp"
	    	android:text="@string/statcalc_btn9"/>
	</LinearLayout>
</LinearLayout>