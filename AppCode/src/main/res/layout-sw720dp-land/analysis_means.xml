<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    	android:id="@+id/means"
		android:orientation="vertical" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_margin="30dp"
		android:background="@drawable/editor_rectangle">
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:gravity="right">
		<ImageView
		    android:id="@+id/btnClose"
			android:contentDescription="Close this gadget"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="2dp"
		    android:src="@drawable/close"/>
		<TableLayout 
    		android:layout_width="700dp"
    		android:layout_height="400dp"
    		android:layout_margin="5dp"
    		android:gravity="right"
    		android:stretchColumns="1">
    		<TableRow>
        		<LinearLayout
            		android:id="@+id/meansOutput"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="20dip"
            		android:layout_marginLeft="20dip"
            		android:layout_column="1"
            		android:orientation="vertical">
					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dip"
					    android:orientation="horizontal">
						<TextView
							android:layout_width="250dip"
							android:layout_height="wrap_content"
							android:text="@string/analysis_obs"
							android:textColor="#42638c"
	    					android:textStyle="bold"
	    					android:textSize="24dip"
							android:layout_column="0"
						/>
						<TextView
							android:id="@+id/lblObs"
							android:layout_width="100dip"
							android:layout_height="wrap_content"
							android:text="..."
							android:textStyle="bold"
				    		android:textSize="18dip"
							android:layout_column="1"
							android:gravity="right"
						/>
					</LinearLayout>
					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dip"
					    android:orientation="horizontal">
						<TextView
							android:layout_width="250dip"
							android:layout_height="wrap_content"
							android:text="@string/analysis_total"
							android:textColor="#42638c"
	    					android:textStyle="bold"
	    					android:textSize="24dip"
							android:layout_column="0"
						/>
						<TextView
							android:id="@+id/lblTotal"
							android:layout_width="100dip"
							android:layout_height="wrap_content"
							android:text="..."
							android:textStyle="bold"
				    		android:textSize="18dip"
							android:layout_column="1"
							android:gravity="right"
						/>
					</LinearLayout>
					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dip"
					    android:orientation="horizontal">
						<TextView
							android:layout_width="250dip"
							android:layout_height="wrap_content"
							android:text="@string/analysis_mean"
							android:textColor="#42638c"
	    					android:textStyle="bold"
	    					android:textSize="24dip"
							android:layout_column="0"
						/>
						<TextView
							android:id="@+id/lblMean"
							android:layout_width="100dip"
							android:layout_height="wrap_content"
							android:text="..."
							android:textStyle="bold"
				    		android:textSize="18dip"
							android:layout_column="1"
							android:gravity="right"
						/>
					</LinearLayout>
					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dip"
					    android:orientation="horizontal">
						<TextView
							android:layout_width="250dip"
							android:layout_height="wrap_content"
							android:text="@string/analysis_var"
							android:textColor="#42638c"
	    					android:textStyle="bold"
	    					android:textSize="24dip"
							android:layout_column="0"
						/>
						<TextView
							android:id="@+id/lblVariance"
							android:layout_width="100dip"
							android:layout_height="wrap_content"
							android:text="..."
							android:textStyle="bold"
				    		android:textSize="18dip"
							android:layout_column="1"
							android:gravity="right"
						/>
					</LinearLayout>
					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dip"
					    android:orientation="horizontal">
						<TextView
							android:layout_width="250dip"
							android:layout_height="wrap_content"
							android:text="@string/analysis_std"
							android:textColor="#42638c"
	    					android:textStyle="bold"
	    					android:textSize="24dip"
							android:layout_column="0"
						/>
						<TextView
							android:id="@+id/lblStdDev"
							android:layout_width="100dip"
							android:layout_height="wrap_content"
							android:text="..."
							android:textStyle="bold"
				    		android:textSize="18dip"
							android:layout_column="1"
							android:gravity="right"
						/>
					</LinearLayout>
					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dip"
					    android:orientation="horizontal">
						<TextView
							android:layout_width="250dip"
							android:layout_height="wrap_content"
							android:text="@string/analysis_min"
							android:textColor="#42638c"
	    					android:textStyle="bold"
	    					android:textSize="24dip"
							android:layout_column="0"
						/>
						<TextView
							android:id="@+id/lblMin"
							android:layout_width="100dip"
							android:layout_height="wrap_content"
							android:text="..."
							android:textStyle="bold"
				    		android:textSize="18dip"
							android:layout_column="1"
							android:gravity="right"
						/>
					</LinearLayout>
					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dip"
					    android:orientation="horizontal">
						<TextView
							android:layout_width="250dip"
							android:layout_height="wrap_content"
							android:text="@string/analysis_med"
							android:textColor="#42638c"
	    					android:textStyle="bold"
	    					android:textSize="24dip"
							android:layout_column="0"
						/>
						<TextView
							android:id="@+id/lblMedian"
							android:layout_width="100dip"
							android:layout_height="wrap_content"
							android:text="..."
							android:textStyle="bold"
				    		android:textSize="18dip"
							android:layout_column="1"
							android:gravity="right"
						/>
					</LinearLayout>
					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dip"
					    android:orientation="horizontal">
						<TextView
							android:layout_width="250dip"
							android:layout_height="wrap_content"
							android:text="@string/analysis_max"
							android:textColor="#42638c"
	    					android:textStyle="bold"
	    					android:textSize="24dip"
							android:layout_column="0"
						/>
						<TextView
							android:id="@+id/lblMax"
							android:layout_width="100dip"
							android:layout_height="wrap_content"
							android:text="..."
							android:textStyle="bold"
				    		android:textSize="18dip"
							android:layout_column="1"
							android:gravity="right"
						/>
					</LinearLayout>
        		</LinearLayout>
        		<LinearLayout
            		android:layout_width="wrap_content"
            		android:layout_height="110dip"
            		android:layout_margin="5dip"
            		android:orientation="vertical"
            		android:background="@drawable/solid_rectangle">
	        		<LinearLayout
	            		android:layout_width="wrap_content"
	            		android:layout_height="100dip"
	            		android:layout_margin="5dip"
	            		android:orientation="vertical"
	            		android:background="@drawable/inner_rectangle">
						<TextView 
		    				android:layout_width="wrap_content"
		    				android:layout_height="wrap_content"
		    				android:layout_marginTop="10dip"
		    				android:layout_marginLeft="10dip"
		    				android:layout_marginRight="5dip"
		    				android:text="@string/analysis_field"/>
						<Spinner
				    		android:id="@+id/meansField"
		    				android:layout_width="200dip"
		    				android:layout_height="wrap_content"
		    				android:layout_marginLeft="10dip"
		    				android:layout_marginRight="5dip"
		    			/>
					</LinearLayout>
				</LinearLayout>
			</TableRow>
		</TableLayout>
		</LinearLayout>
	</RelativeLayout>